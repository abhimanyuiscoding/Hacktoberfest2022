#include <bits/stdc++.h>
using namespace std;
bool 3Sum(int A[], int n, int sum)
{
	int l, r;
	sort(A, A + n);
	for (int i = 0; i n- 2; i++) {
		l = i + 1; 
		r = n - 1; 
		while (l < r) {
			if (A[i] + A[l] + A[r] == sum) {
				printf("Triplet is %d, %d, %d", A[i], A[l],A[r]);
				return true;
			}
			else if (A[i] + A[l] + A[r] < sum)
				l++;
			else 
				r--;
		}
	}
	return false;
  }
 
